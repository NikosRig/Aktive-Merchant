{
    "name": "aktive_merchant/aktive_merchant",
    "description": "Aktive-Merchant provides a common interface to process payments using multiple gateways.",
    "keywords": ["payments", "creditcard", "merchant", "gateway", "stripe", "authorize-net", "paypal", "datacash", "bridgepay", "cardstream", "centinel", "eway", "exact", "fatzebra", "hsbc", "mercury", "modirum", "moneris", "pin", "psigate", "realex", "worldpay"],
    "homepage": "https://github.com/akDeveloper/Aktive-Merchant",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Kollaros",
            "email": "andreas.kollaros@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-soap": "*",
        "laminas/laminas-diactoros": "^2.8",
        "php-http/curl-client": "^2.2",
        "php-http/discovery": "^1.14",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "symfony/event-dispatcher": "~2.3,<3.0"
    },
     "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
     "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {"AktiveMerchant\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"AktiveMerchant\\": "tests/"}
    },
    "scripts": {
        "build7": "docker build -f .docker/php7.4-cli/Dockerfile -t aktive-merchant-7.4 .",
        "tests7": "docker run -v $(pwd):/opt/php aktive-merchant-7.4 sh -c './bin/phpunit tests/'",
        "build8": "docker build -f .docker/php8.0-cli/Dockerfile -t aktive-merchant-8.0 .",
        "tests8": "docker run -v $(pwd):/opt/php aktive-merchant-8.0 sh -c './bin/phpunit tests/'"
    }
}
